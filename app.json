{
    "id": "nl.marcovantklooster.sshclient",
	"sdk": 2,
    "name": {
        "en": "SSH Client",
        "nl": "SSH Client"
    },
    "version": "0.3.0",
    "compatibility": ">=1.5.0",
    "author": {
		"name": "Kerk en IT",
		"email": "info@kerkenit.nl",
		"website": "https://www.kerkenit.nl"
	},
	"contributors": {
		"developers": [{
			"name": "Marco van 't Klooster",
			"email": "info@marcovantklooster.nl"
		}]
	},
	"contributing": {
        "donate": {
            "paypal": {
                "username": "kerkenit"
            }
        }
	},
    "athomForumDiscussionId": 1490,
    "bugs": {
        "url": "https://github.com/kerkenit/nl.marcovantklooster.sshclient/issues"
    },
	"images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"category": "tools",
	"description": {
		"en": "Make a SSH connect to a remote server",
		"nl": "Maak een SSH verbinding met een externe computer"
	},
	"drivers": [{
		"id": "ssh",
		"name": {
			"en": "SSH Server",
			"nl": "SSH Server"
		},
		"images": {
			"large": "drivers/ssh/assets/images/large.jpg",
			"small": "drivers/ssh/assets/images/small.jpg"
		},
		"class": "other",
		"capabilities": [ ],
		"pair": [{
			"id": "start"
		}, {
			"id": "list_devices",
			"template": "list_devices"
		}],
		"settings": [
            {
                "type": "group",
                "label": {
                    "en": "Server settings",
                    "nl": "Server instellingen"
                },
                "children": [
                    {
                        "id": "serverName",
                        "type": "text",
                        "label": {
                            "en": "Servername",
							"nl": "Server naam"
                        },
                        "value": ""
                    },
                    {
                        "id": "hostname",
                        "type": "text",
                        "label": {
                            "en": "Hostname",
							"nl": "Hostnaam"
						},
                        "value": ""
                    },
                    {
                        "id": "port",
                        "type": "number",
                        "label": {
                            "en": "Port",
							"nl": "Poort"
                        },
                        "value": 22,
                        "attr": {
                            "min": 1,
                            "max": 65535
                        }
                    },
                    {
                        "id": "username",
                        "type": "text",
                        "label": {
                            "en": "Username",
							"nl": "Gebruikersnaam"
						},
                        "value": ""
                    },
					{
						"id": "password",
						"type": "password",
						"label": {
							"en": "Password",
							"nl": "Wachtwoord"
						},
						"value": ""
					},
					{
						"id": "privateKey",
						"type": "textarea",
						"label": {
							"en": "privateKey",
							"nl": "private sleutel"
						},
						"value": ""
					},
					{
						"id": "passphrase",
						"type": "password",
						"label": {
							"en": "Passphrase",
							"nl": "Wachtwoordzin"
						},
						"value": ""
					}
                ]
            }
         ]
	}],
	"flow": {
		"actions": [{
			"id": "command",
			"title": {
				"en": "SSH command",
				"nl": "SSH commando"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select SSH client",
					"nl": "Selecteer SSH client"
				}
			}, {
				"name": "command",
				"type": "text",
				"placeholder": {
					"en": "Command to execute",
					"nl": "Uit te voeren commando"
				}
			}]
		}]
	}
}
